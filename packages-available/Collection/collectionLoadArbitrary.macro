# Load a specified collection from an arbitray location --collectionLoad=collectionName,fullPathToFile ~ collection

if ~!Global,collectionLoadArbitrary-0!~,!=,,
	registerForEvent Mass,finishGeneral,collectionSaveArbitrary,~!Global,collectionLoadArbitrary!~

	load loadStoreFromFile ~!Global,collectionLoadArbitrary-1!~,~!Global,collectionLoadArbitrary-0!~
else
	complain Collection: No collection specified.
